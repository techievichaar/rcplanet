# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/rcplanet
MONGODB_USER=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# JWT Configuration
JWT_SECRET=generate_a_secure_random_string
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=generate_another_secure_random_string
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Tax Configuration
TAX_API_URL=https://api.taxjar.com/v2
TAX_API_KEY=your_taxjar_api_key
DEFAULT_TAX_RATE=0.08

# Shipping Configuration
SHIPPING_API_URL=https://api.shipengine.com/v1
SHIPPING_API_KEY=your_shipengine_api_key
SHIPPING_FROM_COUNTRY=US
SHIPPING_FROM_STATE=CA
SHIPPING_FROM_CITY=Your City
SHIPPING_FROM_ZIP=Your ZIP
DEFAULT_SHIPPING_COST=10

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=generate_a_secure_random_string
COOKIE_SECRET=generate_a_secure_random_string

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=true

# API Keys
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Error Tracking
SENTRY_DSN=your_sentry_dsn

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_DIR=uploads

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Maintenance Mode
MAINTENANCE_MODE=false

# Client URL
CLIENT_URL=http://localhost:3000 